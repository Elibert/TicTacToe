@using TicTacToe.Models

@model Game
<div class="wrapper">
    <div class="scoreboard-outer">
        <span id="p1timer" class="team-name p1timer">1:00</span>
        <span class="team-name one">@Model.P1User.UserName</span>
        <div class="score-panel">
            <span class="score team1">@Model.RoundsWonByFirstPlayer</span>
            <span class="score team2">@Model.RoundsWonBySecondPlayer</span>
        </div>
        <span class="team-name two">@Model.P2User.UserName</span>
        <span id="p2timer" class="team-name p2timer" style="display:none;">1:00</span>
    </div>
</div>